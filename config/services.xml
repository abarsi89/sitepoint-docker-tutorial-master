<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sample_param">sample_param</parameter>
    </parameters>

    <services>
        <defaults autowire="true" autoconfigure="true" public="true"/>
        <service id="sample_service" class="Source\Sample\SampleService">
        </service>
        <service id="Smarty" class="Smarty">
        </service>
        <service id="Controller" class="Source\Controllers\Controller">
        </service>
        <service id="HelloController" class="Source\Controllers\HelloController">
        </service>
        <service id="OtherController" class="Source\Controllers\OtherController">
        </service>
    </services>
</container>
